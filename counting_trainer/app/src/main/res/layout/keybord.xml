<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <Button
            android:id="@+id/one_but"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="1"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/two_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="2"
            android:background="@color/white"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/three_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="3"
            android:background="@color/white"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/four_but"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="4"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/five_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="5"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/six_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="6"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/seven_but"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="7"
            android:background="@color/white"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/eight_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="8"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/nine_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="9"
            android:textColor="@color/white"
            android:background="@color/white"/>

        <Button
            android:id="@+id/clear_but"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="DEL"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/zero_but"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="0"
            android:textColor="@color/white"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/nextbut"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="Ввод"
            android:textColor="@color/white"
            android:background="@color/white"

            />


    </GridLayout>
